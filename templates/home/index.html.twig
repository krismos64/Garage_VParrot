<!-- Start reviews section -->

<section class="reviews-section sec-padding">
    <style>
        .review-card {
            border: 3px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            transition: box-shadow 0.3s;
        }

        .review-card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .star-rating {
            color: #FFD700; 
        }

        .review-text {
            color: #233588; 
        }
    </style>

    <div class="container">
        <div class="row">
            {% for review in reviews %}
                <div class="col-md-6 mb-4"> 
                    <div class="card review-card">
                        <div class="card-body">
                            <p class="card-text review-text">{{ review.getMessage() }}</p>
                        </div>
                        <div class="card-footer">
                            <strong>{{ review.getFirstname() }} {{ review.getLastname() }}</strong>
                            <br>
                            <div class="star-rating">
                                {% for i in 1..5 %}
                                    {% if i <= review.getRating() %}
                                        <span class="star">&#9733;</span>
                                    {% else %}
                                        <span class="star">&#9734;</span>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <br>
                            <span class="text-muted">Publié le {{ review.getPublishedAt()|date('d/m/Y') }}</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
<!-- End reviews section -->

