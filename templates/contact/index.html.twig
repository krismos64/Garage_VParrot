{% extends 'base.html.twig' %}

{% block title %}Formulaire de contact{% endblock %}

{% block body %}
    <div class="container-sm">
        <div class="row">
            <div class="col-12 mx-auto">
            <style>
    h1 {
        text-align: center;
        color: #233588; 
        margin-top: 50px;
        line-height: 1.5;

         }
       </style>
                <h1>Votre demande</h1>
                {{ form_start(form, {'attr': {'id': 'form-contact'}} ) }}
                
                {# Display form errors at the top of the form #}
                {{ form_errors(form) }}

                <div class="form-group my-3">
                    {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group my-3">
                    {{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group my-3">
                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group my-3">
                    {{ form_row(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group my-3" id="formContent">
                    {{ form_row(form.content, {'attr': {'class': 'form-control', 'id': 'contentField'}}) }}
                </div>
                {{ form_row(form._token) }}
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-secondary my-3">Envoyer</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
