{# templates/car/cardetails.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détails de la Voiture{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails de la Voiture</h1>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ car.getBrand() }} {{ car.getModel() }}</h5>
                <p class="card-text"><strong>Année:</strong> {{ car.getYear() }}</p>
                <p class="card-text"><strong>Kilométrage:</strong> {{ car.getKm() }} km</p>
                <p class="card-text"><strong>Prix:</strong> {{ car.getPrice() }}€</p>
                <p class="card-text"><strong>Description:</strong> {{ car.getDescription() }}</p>

                <!-- Display car images as thumbnails -->
                {% if car.getImages()|length > 0 %}
                    <h5 class="mt-3">Images de la Voiture</h5>
                    <div class="row">
                        {% for image in car.getImages() %}
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <img src="{{ asset('/images/Cars/' ~ image.getTitle()) }}" class="card-img-top" alt="{{ image.getTitle() }}">
                                    <div class="card-body">
                                        <p class="card-text">{{ image.getDescription() }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
