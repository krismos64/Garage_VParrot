{% extends 'base.html.twig' %}

{% block title %}Les tarifs{% endblock %}

{% block body %}

<!--Start pricing plan area-->
<section class="pricing-plan-area">
    <div class="container">
        <div class="sec-title text-center">
            <h1>Nos tarifs de base</h1>
            <span class="border center"></span>
            <p>
                Ces tarifs correspondent à une estimation moyenne.
                Ils peuvent être légèrement inférieurs ou supérieurs
                suivant le modèle de votre voiture ainsi que le temps
                de main d'oeuvre.
            </p>
        </div>
        <div class="row">

            <!--Start single price box-->
            <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12 text-center pricing-box" id="pricing-box-1">
                <div class="single-price-box">
                    <div class="table-header">
                        <div class="top">
                            <h3>Révision</h3>
                        </div>
                        <div class="package">
                            <h1>149€</h1>
                        </div>
                    </div>
                    <div class="price-list">
                        <ul>
                            <li>Vidange</li>
                            <li>Changement filtres</li>
                            <li>Vérification de la voiture</li>
                            <li>Huile de grande qualité</li>
                            <li>Nettoyage extérieur</li>
                        </ul>
                    </div>
                    <div class="table-footer">
                        <a class="thm-btn" href="#">Réservez</a>
                    </div>
                </div>
            </div>
            <!--End single price box-->

            <!--Start single price box-->
            <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12 text-center pricing-box" id="pricing-box-2">
                <div class="single-price-box">
                    <div class="table-header">
                        <div class="top">
                            <h3>Climatisation</h3>
                        </div>
                        <div class="package">
                            <h1>109€</h1>
                        </div>
                    </div>
                    <div class="price-list">
                        <ul>
                            <li>Diagnostic</li>
                            <li>Nettoyage du circuit</li>
                            <li>Recharge clim</li>
                            <li>Remplacement filtre habitacle</li>
                            <li>Nettoyage extérieur</li>
                        </ul>
                    </div>
                    <div class="table-footer">
                        <a class="thm-btn" href="#">Réservez</a>
                    </div>
                </div>
            </div>
            <!--End single price box-->

            <!--Start single price box-->
            <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12 text-center pricing-box" id="pricing-box-3">
                <div class="single-price-box">
                    <div class="table-header">
                        <div class="top">
                            <h3>Freinage</h3>
                        </div>
                        <div class="package">
                            <h1>99€</h1>
                        </div>
                    </div>
                    <div class="price-list">
                        <ul>
                            <li>Diagnostic freinage</li>
                            <li>Pièces de qualité</li>
                            <li>Remplacement disques/plaquettes</li>
                            <li>Remplissage liquide de freins</li>
                            <li>Nettoyage extérieur</li>
                        </ul>
                    </div>
                    <div class="table-footer">
                        <a class="thm-btn" href="#">Réservez</a>
                    </div>
                </div>
            </div>
            <!--End single price box-->

            <!--Start single price box-->
            <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12 text-center pricing-box" id="pricing-box-4">
                <div class="single-price-box">
                    <div class="table-header">
                        <div class="top">
                            <h3>Amortisseurs</h3>
                        </div>
                        <div class="package">
                            <h1>199€</h1>
                        </div>
                    </div>
                    <div class="price-list">
                        <ul>
                            <li>Diagnostic</li>
                            <li>Remplacement amortisseurs</li>
                            <li>Sécurité respectée</li>
                            <li>Géométrie+pose</li>
                            <li>Nettoyage extérieur</li>
                        </ul>
                    </div>
                    <div class="table-footer">
                        <a class="thm-btn" href="#">Réservez</a>
                    </div>
                </div>
            </div>
            <!--End single price box-->

        </div>
    </div>
</section>
<!--End pricing plan area-->

<script src="https://unpkg.com/gsap@3.9.0/dist/gsap.min.js"></script>
<script type="module">
    document.addEventListener("DOMContentLoaded", () => {
        // Animation for pricing boxes
        gsap.from('.pricing-box', {
            opacity: 0,
            scale: 0.5,
            duration: 1,
            stagger: 0.2,
            ease: 'power2.out'
        });
    });
</script>

{% endblock %}